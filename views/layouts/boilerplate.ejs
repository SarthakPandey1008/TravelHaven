        <script>
          // Get the button element
const easterEggBtn = document.querySelector('.easter-egg-btn');

// Function to check scroll position
function checkScroll() {
    // Calculate the scroll position
    const scrollPosition = window.scrollY + window.innerHeight;
    const documentHeight = document.documentElement.scrollHeight;

    // Show the button if the user is near the bottom of the page
    if (scrollPosition >= documentHeight - 110) { // Show the button when within 200px from the bottom
        easterEggBtn.style.display = 'flex'; // Show the button
    } else {
        easterEggBtn.style.display = 'none'; // Hide the button when scrolling upwards
    }
}

// Add the scroll event listener
window.addEventListener('scroll', checkScroll);

